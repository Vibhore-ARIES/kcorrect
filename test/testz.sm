data testsp.K.dat
read <za 1>
data testsp.photoz.dat
read <zm 3>

limits 0. 0.5 0. 0.5
putbox		
points za zm
xlab		z_{spectro}
ylab		z_{photoz}

define sig (sqrt(sum((zm-za)**2)/dimen(zm)))
set i = 0, dimen(zm)-1
set indx = i if (abs(zm-za)<3*$sig)
define sig (sqrt(sum((zm[indx]-za[indx])**2)/dimen(indx)))
startline 20000 10000
makeline \sigma = $sig		

set x = <-1. 1.>
set y = x
lweight 4
ctype red
connect x y		
