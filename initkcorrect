setenv KCORRECT_DIR `pwd`
setenv IDL_PATH +${KCORRECT_DIR}:${IDL_PATH}
setenv LD_LIBRARY_PATH $KCORRECT_DIR/lib:
set path = ($KCORRECT_DIR/bin $path)

# C and Fortran flags
set hosttype = `uname -a | awk '{print $1 }'`
if($hosttype == 'IRIX') then
setenv MAKE_CFLAGS '-n32 -woff 1174'
setenv MAKE_FTNLIB '-lftn'
endif
if($hosttype == 'Linux') then
setenv MAKE_CFLAGS ' '
setenv MAKE_FTNLIB '-lg2c'
endif
